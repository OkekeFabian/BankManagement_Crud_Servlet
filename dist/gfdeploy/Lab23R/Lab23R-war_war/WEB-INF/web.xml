<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CrudServlet</servlet-name>
        <servlet-class>link.CrudServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBankServlet</servlet-name>
        <servlet-class>bank.AddBankServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteBankServlet</servlet-name>
        <servlet-class>bank.DeleteBankServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ErrorServlet</servlet-name>
        <servlet-class>link.ErrorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindBankServlet</servlet-name>
        <servlet-class>bank.FindBankServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateBankServlet</servlet-name>
        <servlet-class>bank.UpdateBankServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCustomerServlet</servlet-name>
        <servlet-class>customer.AddCustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCustomerServlet</servlet-name>
        <servlet-class>customer.DeleteCustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCustomerServlet</servlet-name>
        <servlet-class>customer.UpdateCustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindCustomerServlet</servlet-name>
        <servlet-class>customer.FindCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CrudServlet</servlet-name>
        <url-pattern>/crud</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBankServlet</servlet-name>
        <url-pattern>/Bank/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteBankServlet</servlet-name>
        <url-pattern>/Bank/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorServlet</servlet-name>
        <url-pattern>/ErrorServlet/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindBankServlet</servlet-name>
        <url-pattern>/Bank/find</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateBankServlet</servlet-name>
        <url-pattern>/Bank/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCustomerServlet</servlet-name>
        <url-pattern>/Customer/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCustomerServlet</servlet-name>
        <url-pattern>/Customer/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindCustomerServlet</servlet-name>
        <url-pattern>/Customer/find</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCustomerServlet</servlet-name>
        <url-pattern>/Customer/update</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
